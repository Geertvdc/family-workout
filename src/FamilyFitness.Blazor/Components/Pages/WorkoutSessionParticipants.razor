@page "/workout-session-participants"
@using System.Net.Http.Json
@inject HttpClient Http
@rendermode InteractiveServer

<h3>Workout Session Participants</h3>

@if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (successMessage != null)
{
    <div class="alert alert-success">@successMessage</div>
}

<div class="row mb-4">
    <div class="col-md-6">
        <h4>Create New Participant</h4>
        <EditForm Model="@newParticipant" OnValidSubmit="@CreateParticipant">
            <div class="mb-3">
                <label class="form-label">Workout Session ID *</label>
                <InputText class="form-control" @bind-Value="newParticipant.WorkoutSessionId" required />
                <small class="text-muted">Enter WorkoutSession GUID</small>
            </div>
            <div class="mb-3">
                <label class="form-label">User ID *</label>
                <InputText class="form-control" @bind-Value="newParticipant.UserId" required />
                <small class="text-muted">Enter User GUID</small>
            </div>
            <div class="mb-3">
                <label class="form-label">Participant Index *</label>
                <InputNumber class="form-control" @bind-Value="newParticipant.ParticipantIndex" required />
                <small class="text-muted">Order in which participant joined (1, 2, 3...)</small>
            </div>
            <button type="submit" class="btn btn-primary" disabled="@isCreating">
                @if (isCreating)
                {
                    <span>Creating...</span>
                }
                else
                {
                    <span>Create</span>
                }
            </button>
        </EditForm>
    </div>
</div>

<h4>All Workout Session Participants</h4>

@if (participants == null)
{
    <p><em>Loading...</em></p>
}
else if (!participants.Any())
{
    <p><em>No workout session participants found. Create one above to get started!</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Workout Session ID</th>
                <th>User ID</th>
                <th>Participant Index</th>
                <th>Joined At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var participant in participants)
            {
                <tr>
                    <td><small>@participant.WorkoutSessionId</small></td>
                    <td><small>@participant.UserId</small></td>
                    <td>@participant.ParticipantIndex</td>
                    <td>@participant.JoinedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteParticipant(participant.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<WorkoutSessionParticipantDto>? participants;
    private CreateWorkoutSessionParticipantModel newParticipant = new();
    private bool isCreating = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadParticipants();
    }

    private async Task LoadParticipants()
    {
        try
        {
            errorMessage = null;
            participants = await Http.GetFromJsonAsync<List<WorkoutSessionParticipantDto>>("/api/workout-session-participants");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load workout session participants: {ex.Message}";
        }
    }

    private async Task CreateParticipant()
    {
        try
        {
            isCreating = true;
            errorMessage = null;
            successMessage = null;

            var command = new
            {
                WorkoutSessionId = Guid.Parse(newParticipant.WorkoutSessionId),
                UserId = Guid.Parse(newParticipant.UserId),
                ParticipantIndex = newParticipant.ParticipantIndex
            };

            var response = await Http.PostAsJsonAsync("/api/workout-session-participants", command);
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = "Workout session participant created successfully!";
                newParticipant = new CreateWorkoutSessionParticipantModel();
                await LoadParticipants();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.error ?? "Failed to create workout session participant";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isCreating = false;
        }
    }

    private async Task DeleteParticipant(Guid id)
    {
        try
        {
            errorMessage = null;
            successMessage = null;

            var response = await Http.DeleteAsync($"/api/workout-session-participants/{id}");
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = "Workout session participant deleted successfully!";
                await LoadParticipants();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.error ?? "Failed to delete workout session participant";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    public class WorkoutSessionParticipantDto
    {
        public Guid Id { get; set; }
        public Guid WorkoutSessionId { get; set; }
        public Guid UserId { get; set; }
        public int ParticipantIndex { get; set; }
        public DateTime JoinedAt { get; set; }
    }

    public class CreateWorkoutSessionParticipantModel
    {
        public string WorkoutSessionId { get; set; } = string.Empty;
        public string UserId { get; set; } = string.Empty;
        public int ParticipantIndex { get; set; } = 1;
    }

    public class ErrorResponse
    {
        public string error { get; set; } = string.Empty;
    }
}
