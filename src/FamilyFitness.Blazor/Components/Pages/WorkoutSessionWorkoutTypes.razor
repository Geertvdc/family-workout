@page "/workout-session-workout-types"
@using System.Net.Http.Json
@inject HttpClient Http
@rendermode InteractiveServer

<h3>Workout Session Workout Types (Stations)</h3>

@if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (successMessage != null)
{
    <div class="alert alert-success">@successMessage</div>
}

<div class="row mb-4">
    <div class="col-md-6">
        <h4>Create New Station Assignment</h4>
        <EditForm Model="@newItem" OnValidSubmit="@CreateItem">
            <div class="mb-3">
                <label class="form-label">Workout Session *</label>
                <InputSelect class="form-control" @bind-Value="newItem.WorkoutSessionId" required>
                    <option value="">-- Select a Session --</option>
                    @if (workoutSessions != null)
                    {
                        @foreach (var session in workoutSessions)
                        {
                            <option value="@session.Id">Session on @session.SessionDate.ToString("yyyy-MM-dd") (ID: @session.Id.ToString().Substring(0, 8)...)</option>
                        }
                    }
                </InputSelect>
            </div>
            <div class="mb-3">
                <label class="form-label">Workout Type *</label>
                <InputSelect class="form-control" @bind-Value="newItem.WorkoutTypeId" required>
                    <option value="">-- Select a Workout Type --</option>
                    @if (workoutTypes != null)
                    {
                        @foreach (var type in workoutTypes)
                        {
                            <option value="@type.Id">@type.Name</option>
                        }
                    }
                </InputSelect>
            </div>
            <div class="mb-3">
                <label class="form-label">Station Index (1-4) *</label>
                <InputSelect class="form-control" @bind-Value="newItem.StationIndex" required>
                    <option value="0">-- Select a Station --</option>
                    <option value="1">Station 1</option>
                    <option value="2">Station 2</option>
                    <option value="3">Station 3</option>
                    <option value="4">Station 4</option>
                </InputSelect>
            </div>
            <button type="submit" class="btn btn-primary" disabled="@isCreating">
                @if (isCreating)
                {
                    <span>Creating...</span>
                }
                else
                {
                    <span>Create</span>
                }
            </button>
        </EditForm>
    </div>
</div>

<h4>All Workout Session Workout Types</h4>

@if (items == null)
{
    <p><em>Loading...</em></p>
}
else if (!items.Any())
{
    <p><em>No workout session workout types found. Create one above to get started!</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Workout Session ID</th>
                <th>Workout Type ID</th>
                <th>Station Index</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in items)
            {
                <tr>
                    <td><small>@item.WorkoutSessionId</small></td>
                    <td>@item.WorkoutTypeId</td>
                    <td>@item.StationIndex</td>
                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteItem(item.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<WorkoutSessionWorkoutTypeDto>? items;
    private List<WorkoutSessionDto>? workoutSessions;
    private List<WorkoutTypeDto>? workoutTypes;
    private CreateWorkoutSessionWorkoutTypeModel newItem = new();
    private bool isCreating = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadItems();
        await LoadWorkoutSessions();
        await LoadWorkoutTypes();
    }

    private async Task LoadItems()
    {
        try
        {
            errorMessage = null;
            items = await Http.GetFromJsonAsync<List<WorkoutSessionWorkoutTypeDto>>("/api/workout-session-workout-types");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load workout session workout types: {ex.Message}";
        }
    }

    private async Task LoadWorkoutSessions()
    {
        try
        {
            workoutSessions = await Http.GetFromJsonAsync<List<WorkoutSessionDto>>("/api/workout-sessions");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load workout sessions: {ex.Message}";
        }
    }

    private async Task LoadWorkoutTypes()
    {
        try
        {
            workoutTypes = await Http.GetFromJsonAsync<List<WorkoutTypeDto>>("/api/workout-types");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load workout types: {ex.Message}";
        }
    }

    private async Task CreateItem()
    {
        try
        {
            isCreating = true;
            errorMessage = null;
            successMessage = null;

            var command = new
            {
                WorkoutSessionId = Guid.Parse(newItem.WorkoutSessionId),
                WorkoutTypeId = newItem.WorkoutTypeId,
                StationIndex = newItem.StationIndex
            };

            var response = await Http.PostAsJsonAsync("/api/workout-session-workout-types", command);
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = "Workout session workout type created successfully!";
                newItem = new CreateWorkoutSessionWorkoutTypeModel();
                await LoadItems();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.error ?? "Failed to create workout session workout type";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isCreating = false;
        }
    }

    private async Task DeleteItem(Guid id)
    {
        try
        {
            errorMessage = null;
            successMessage = null;

            var response = await Http.DeleteAsync($"/api/workout-session-workout-types/{id}");
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = "Workout session workout type deleted successfully!";
                await LoadItems();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.error ?? "Failed to delete workout session workout type";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    public class WorkoutSessionWorkoutTypeDto
    {
        public Guid Id { get; set; }
        public Guid WorkoutSessionId { get; set; }
        public string WorkoutTypeId { get; set; } = string.Empty;
        public int StationIndex { get; set; }
    }

    public class CreateWorkoutSessionWorkoutTypeModel
    {
        public string WorkoutSessionId { get; set; } = string.Empty;
        public string WorkoutTypeId { get; set; } = string.Empty;
        public int StationIndex { get; set; } = 1;
    }

    public class WorkoutSessionDto
    {
        public Guid Id { get; set; }
        public Guid GroupId { get; set; }
        public Guid CreatorId { get; set; }
        public DateTime SessionDate { get; set; }
        public DateTime? StartedAt { get; set; }
        public DateTime? EndedAt { get; set; }
        public int Status { get; set; }
        public DateTime CreatedAt { get; set; }
    }

    public class WorkoutTypeDto
    {
        public string Id { get; set; } = string.Empty;
        public string Name { get; set; } = string.Empty;
        public string? Description { get; set; }
    }

    public class ErrorResponse
    {
        public string error { get; set; } = string.Empty;
    }
}
