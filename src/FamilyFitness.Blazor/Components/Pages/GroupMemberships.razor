@page "/group-memberships"
@using System.Net.Http.Json
@using FamilyFitness.Blazor.Models
@inject HttpClient Http
@rendermode InteractiveServer

<h3>Group Memberships</h3>

@if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (successMessage != null)
{
    <div class="alert alert-success">@successMessage</div>
}

<div class="row mb-4">
    <div class="col-md-6">
        <h4>Create New Group Membership</h4>
        <EditForm Model="@newMembership" OnValidSubmit="@CreateMembership">
            <div class="mb-3">
                <label class="form-label">Group *</label>
                <InputSelect class="form-control" @bind-Value="newMembership.GroupId" required>
                    <option value="">-- Select a Group --</option>
                    @if (groups != null)
                    {
                        @foreach (var group in groups)
                        {
                            <option value="@group.Id">@group.Name</option>
                        }
                    }
                </InputSelect>
            </div>
            <div class="mb-3">
                <label class="form-label">User *</label>
                <InputSelect class="form-control" @bind-Value="newMembership.UserId" required>
                    <option value="">-- Select a User --</option>
                    @if (users != null)
                    {
                        @foreach (var user in users)
                        {
                            <option value="@user.Id">@user.Username (@user.Email)</option>
                        }
                    }
                </InputSelect>
            </div>
            <div class="mb-3">
                <label class="form-label">Role</label>
                <InputText class="form-control" @bind-Value="newMembership.Role" />
                <small class="text-muted">Optional (e.g., admin, member)</small>
            </div>
            <button type="submit" class="btn btn-primary" disabled="@isCreating">
                @if (isCreating)
                {
                    <span>Creating...</span>
                }
                else
                {
                    <span>Create</span>
                }
            </button>
        </EditForm>
    </div>
</div>

<h4>All Group Memberships</h4>

@if (memberships == null)
{
    <p><em>Loading...</em></p>
}
else if (!memberships.Any())
{
    <p><em>No group memberships found. Create one above to get started!</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Group ID</th>
                <th>User ID</th>
                <th>Role</th>
                <th>Joined At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var membership in memberships)
            {
                <tr>
                    <td><small>@membership.GroupId</small></td>
                    <td><small>@membership.UserId</small></td>
                    <td>@(membership.Role ?? "-")</td>
                    <td>@membership.JoinedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteMembership(membership.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<GroupMembershipDto>? memberships;
    private List<GroupDto>? groups;
    private List<UserDto>? users;
    private CreateGroupMembershipModel newMembership = new();
    private bool isCreating = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadMemberships();
        await LoadGroups();
        await LoadUsers();
    }

    private async Task LoadMemberships()
    {
        try
        {
            errorMessage = null;
            memberships = await Http.GetFromJsonAsync<List<GroupMembershipDto>>("/api/group-memberships");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load group memberships: {ex.Message}";
        }
    }

    private async Task LoadGroups()
    {
        try
        {
            groups = await Http.GetFromJsonAsync<List<GroupDto>>("/api/groups");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load groups: {ex.Message}";
        }
    }

    private async Task LoadUsers()
    {
        try
        {
            users = await Http.GetFromJsonAsync<List<UserDto>>("/api/users");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load users: {ex.Message}";
        }
    }

    private async Task CreateMembership()
    {
        try
        {
            isCreating = true;
            errorMessage = null;
            successMessage = null;

            var command = new
            {
                GroupId = Guid.Parse(newMembership.GroupId),
                UserId = Guid.Parse(newMembership.UserId),
                Role = newMembership.Role
            };

            var response = await Http.PostAsJsonAsync("/api/group-memberships", command);
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = "Group membership created successfully!";
                newMembership = new CreateGroupMembershipModel();
                await LoadMemberships();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.error ?? "Failed to create group membership";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isCreating = false;
        }
    }

    private async Task DeleteMembership(Guid id)
    {
        try
        {
            errorMessage = null;
            successMessage = null;

            var response = await Http.DeleteAsync($"/api/group-memberships/{id}");
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = "Group membership deleted successfully!";
                await LoadMemberships();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.error ?? "Failed to delete group membership";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    public class CreateGroupMembershipModel
    {
        public string GroupId { get; set; } = string.Empty;
        public string UserId { get; set; } = string.Empty;
        public string? Role { get; set; }
    }
}

