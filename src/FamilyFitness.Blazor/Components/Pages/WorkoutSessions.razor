@page "/workout-sessions"
@using System.Net.Http.Json
@inject HttpClient Http
@rendermode InteractiveServer

<h3>Workout Sessions</h3>

@if (errorMessage != null)
{
    <div class="alert alert-danger">@errorMessage</div>
}

@if (successMessage != null)
{
    <div class="alert alert-success">@successMessage</div>
}

<div class="row mb-4">
    <div class="col-md-6">
        <h4>Create New Workout Session</h4>
        <EditForm Model="@newSession" OnValidSubmit="@CreateSession">
            <div class="mb-3">
                <label class="form-label">Group ID *</label>
                <InputText class="form-control" @bind-Value="newSession.GroupId" required />
                <small class="text-muted">Enter Group GUID</small>
            </div>
            <div class="mb-3">
                <label class="form-label">Creator ID *</label>
                <InputText class="form-control" @bind-Value="newSession.CreatorId" required />
                <small class="text-muted">Enter User GUID</small>
            </div>
            <div class="mb-3">
                <label class="form-label">Session Date *</label>
                <InputDate class="form-control" @bind-Value="newSession.SessionDate" required />
            </div>
            <button type="submit" class="btn btn-primary" disabled="@isCreating">
                @if (isCreating)
                {
                    <span>Creating...</span>
                }
                else
                {
                    <span>Create</span>
                }
            </button>
        </EditForm>
    </div>
</div>

<h4>All Workout Sessions</h4>

@if (sessions == null)
{
    <p><em>Loading...</em></p>
}
else if (!sessions.Any())
{
    <p><em>No workout sessions found. Create one above to get started!</em></p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Session Date</th>
                <th>Group ID</th>
                <th>Creator ID</th>
                <th>Status</th>
                <th>Created At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var session in sessions)
            {
                <tr>
                    <td>@session.SessionDate.ToString("yyyy-MM-dd")</td>
                    <td><small>@session.GroupId</small></td>
                    <td><small>@session.CreatorId</small></td>
                    <td>@session.Status</td>
                    <td>@session.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>
                        <button class="btn btn-sm btn-danger" @onclick="() => DeleteSession(session.Id)">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<WorkoutSessionDto>? sessions;
    private CreateWorkoutSessionModel newSession = new();
    private bool isCreating = false;
    private string? errorMessage;
    private string? successMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadSessions();
    }

    private async Task LoadSessions()
    {
        try
        {
            errorMessage = null;
            sessions = await Http.GetFromJsonAsync<List<WorkoutSessionDto>>("/api/workout-sessions");
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load workout sessions: {ex.Message}";
        }
    }

    private async Task CreateSession()
    {
        try
        {
            isCreating = true;
            errorMessage = null;
            successMessage = null;

            var command = new
            {
                GroupId = Guid.Parse(newSession.GroupId),
                CreatorId = Guid.Parse(newSession.CreatorId),
                SessionDate = newSession.SessionDate
            };

            var response = await Http.PostAsJsonAsync("/api/workout-sessions", command);
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = "Workout session created successfully!";
                newSession = new CreateWorkoutSessionModel();
                await LoadSessions();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.error ?? "Failed to create workout session";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
        finally
        {
            isCreating = false;
        }
    }

    private async Task DeleteSession(Guid id)
    {
        try
        {
            errorMessage = null;
            successMessage = null;

            var response = await Http.DeleteAsync($"/api/workout-sessions/{id}");
            
            if (response.IsSuccessStatusCode)
            {
                successMessage = "Workout session deleted successfully!";
                await LoadSessions();
            }
            else
            {
                var error = await response.Content.ReadFromJsonAsync<ErrorResponse>();
                errorMessage = error?.error ?? "Failed to delete workout session";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"Error: {ex.Message}";
        }
    }

    public class WorkoutSessionDto
    {
        public Guid Id { get; set; }
        public Guid GroupId { get; set; }
        public Guid CreatorId { get; set; }
        public DateTime SessionDate { get; set; }
        public DateTime? StartedAt { get; set; }
        public DateTime? EndedAt { get; set; }
        public int Status { get; set; }
        public DateTime CreatedAt { get; set; }
    }

    public class CreateWorkoutSessionModel
    {
        public string GroupId { get; set; } = string.Empty;
        public string CreatorId { get; set; } = string.Empty;
        public DateTime SessionDate { get; set; } = DateTime.Today;
    }

    public class ErrorResponse
    {
        public string error { get; set; } = string.Empty;
    }
}
